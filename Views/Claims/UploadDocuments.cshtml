@model CMCS.Models.UploadDocumentViewModel

@{
    ViewData["Title"] = "Upload Documents";
}

<h2>Upload Documents</h2>

<form asp-action="UploadDocuments" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="LecturerId" class="control-label">Lecturer ID</label>
        <input asp-for="LecturerId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Document" class="control-label">Upload Document</label>
        <input asp-for="Document" class="form-control" type="file" />
        <span asp-validation-for="Document" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Upload" class="btn btn-primary" />
    </div>
</form>
