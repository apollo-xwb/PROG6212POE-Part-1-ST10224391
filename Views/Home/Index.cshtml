@model CMCS.Models.Claim

@{
    ViewData["Title"] = "Submit a Claim";
}

<div class="text-center">
    <h1 class="display-4">Submit a Claim</h1>
</div>

<div class="container mt-5">
    <form asp-action="CreateClaim" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="ClaimDate" class="control-label"></label>
            <input asp-for="ClaimDate" class="form-control" />
            <span asp-validation-for="ClaimDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClaimAmount" class="control-label"></label>
            <input asp-for="ClaimAmount" class="form-control" />
            <span asp-validation-for="ClaimAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="SupportingDocuments">Supporting Documents</label>
            <input type="file" name="supportingDocuments" multiple class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Submit Claim</button>
    </form>
</div>
